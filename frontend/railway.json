{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "rm -rf node_modules .cache build && yarn install --frozen-lockfile && yarn build"
  },
  "deploy": {
    "startCommand": "npx serve -s build -l 8080",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

